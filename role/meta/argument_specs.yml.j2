---
# roles/{{ role_name }}/meta/argument_specs.yml
# reference: https://docs.ansible.com/ansible/latest/user_guide/playbooks_reuse_roles.html#role-argument-validation

argument_specs:
  # roles/{{ role_name }}/tasks/main.yml entry point
  main:
    short_description: "The main entrypoint for {{ role_name }}."
    options:
      {{ role_name }}_package_names:
        description: "Define the package names."
        type: "list"
        elements: "str"
        default: []
      {{ role_name }}_package_state:
        description: "Define the package state."
        type: "str"
        choices:
          - "present"
          - "absent"
          - "latest"
        default: "present"
      {{ role_name }}_checks_enabled:
        description: "Define if checks should run.
        type: "bool"
        default: false
...
